generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model users {
  buyer_id Int    @id @default(autoincrement())
  username String @unique
  role String
  email    String @unique
  password String
}

model products {
  product_id   Int    @id @default(autoincrement())
  name         String @unique
  product_type String
  description  String
  price        Float
  quantity     Int
  seller_id    Int
  image_url    String
}
